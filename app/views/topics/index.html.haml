#archive-settings{class: params[:topics_q] ? "active" : "inactive"}
  #date-slider
  = search_form_for @topics_q, as: :topics_q do |f|
    = label_tag :last_post_remote_created_at_gteq, "ka탑i mi teme od"
    = f.text_field :last_post_remote_created_at_gteq,
        value: @topics_q.last_post_remote_created_at_gteq.strftime("%d.%m.%Y")
    = label_tag :last_post_remote_created_at_lteq, "do"
    = f.text_field :last_post_remote_created_at_lteq,
        value: @topics_q.last_post_remote_created_at_lteq.strftime("%d.%m.%Y")
    = f.submit "po탑eni, schatz!"

#archive-settings-toggle= link_to "ka탑i 훾asovni stroj", "#"

= render "/topics/topics", topics: @topics
