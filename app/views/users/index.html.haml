#users
  %h2 uporabniki
  .pager= paginate @users
  = search_form_for @users_q, as: :users_q do |f|
    = f.label :name_cont, "ime vsebuje:"
    = f.search_field :name_cont
    = f.submit "išči"
%table.users
  %thead
    %tr
      %th ime
      %th # sporočil
      %th # tem
  - @users.each do |user|
    %tbody
      %tr
        %td= link_to user, user_path(user)
        %td= user.posts_count
        %td= user.topics_count
.pager= paginate @users
